// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  // url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  url      = env("DATABASE_URL")
}

model Location {
  Id          String       @id @unique @default(uuid())
  Name        String?
  Comment     String?
  IsObject    Boolean?
  Attributes  Json?
  Connections Connection[]
  WorldNode   WorldNode?
}

model Narration {
  Id         String     @id @unique @default(cuid())
  Name       String?
  /// [Attributes]
  Attributes Json?
  WorldNode  WorldNode?
}

model Item {
  Id         String     @id @unique @default(uuid())
  Name       String?
  /// [Attributes]
  Attributes Json?
  WorldNode  WorldNode?
}

model Character {
  Id         String     @id @unique @default(uuid())
  Name       String?
  Comment    String?
  IsObject   Boolean?
  /// [Attributes]
  Attributes Json?
  WorldNode  WorldNode?
}

model Connection {
  Id          String    @id @unique @default(uuid())
  Destination String
  /// [Attributes]
  Attributes  Json?
  Location    Location? @relation(fields: [locationId], references: [Id])
  locationId  String?
}

model WorldNode {
  //prisma-extension-bark internal
  id       Int    @id @default(autoincrement())
  path     String @unique
  depth    Int
  numchild Int    @default(0)
  //

  type        WorldNodeType
  character   Character?    @relation(fields: [characterId], references: [Id])
  item        Item?         @relation(fields: [itemId], references: [Id])
  narration   Narration?    @relation(fields: [narrationId], references: [Id])
  location    Location?     @relation(fields: [locationId], references: [Id])
  characterId String?       @unique
  itemId      String?       @unique
  narrationId String?       @unique
  locationId  String?       @unique

  World World?
}

model World {
  Id           String    @id @unique @default(uuid())
  Title        String
  TitleGeneric String
  Description  String
  Override     Int
  RootNode     WorldNode @relation(fields: [RootNodeId], references: [id])
  RootNodeId   Int       @unique
}

enum WorldNodeType {
  Character
  Location
  Item
  Narration
  World
}
