// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  // url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  // directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  url      = env("DATABASE_URL")
}

model WorldContent {
  Id          String       @id @unique @default(uuid())
  Name        String?
  Comment     String?
  IsObject    Boolean?
  Connections Connection[]

  /// [Attributes]
  Attributes Json?

  WorldNode   WorldNode @relation(fields: [worldNodeId], references: [id])
  worldNodeId Int       @unique
}

model Connection {
  Id             String       @id @unique @default(uuid())
  Destination    String
  /// [Attributes]
  Attributes     Json?
  WorldContent   WorldContent @relation(fields: [worldContentId], references: [Id])
  worldContentId String
}

model WorldNode {
  //prisma-extension-bark internal
  id       Int    @id @default(autoincrement())
  path     String @unique
  depth    Int
  numchild Int    @default(0)
  //

  type WorldNodeType

  World        World?
  WorldContent WorldContent?
}

model World {
  Id           String    @id @unique @default(uuid())
  Title        String
  TitleGeneric String
  Description  String
  Override     Int
  RootNode     WorldNode @relation(fields: [RootNodeId], references: [id])
  RootNodeId   Int       @unique
}

enum WorldNodeType {
  Character
  Location
  Item
  Narration
  World
}
